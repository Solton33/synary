<%= render "shared/header" %>

<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with model: @scenario, local: true do |form| %>
      <div class="title">
        <%= form.text_field :title, placeholder: "タイトル" %>
      </div>
      <%= form.file_field :image %>
      <%= form.text_area :scenario, placeholder: "テキスト", rows: "10" %>
      <trix-editor input="scenario_scenario"></trix-editor>
      <%= form.submit "投稿" %>
    <% end %>
  </div>
</div>