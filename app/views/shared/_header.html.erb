<header class="header">
  <div class="header__bar row">
    <h1 class="grid-6"><a href="/">Synary</a></h1>
    <%= form_with(url: search_scenarios_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
    <div class="user_nav grid-6">
    <% if user_signed_in? %>
      <%= link_to current_user.nickname, user_path(current_user.id), method: :get, class: "nickname" %>
      <%= link_to "投稿する", new_scenario_path, class: "post" %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout" %>
     <% else %> 
      <%= link_to "新規登録", new_user_registration_path, method: :get, class: "signin" %>
      <%= link_to "ログイン", new_user_session_path, method: :get, class: "login" %>
    <% end %>
    </div>
  </div>
</header>